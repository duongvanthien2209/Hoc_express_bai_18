extends ../layouts/authDefault.pug

block Content
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/create" method='POST' enctype='multipart/form-data')
        .from-group
            label(for="name") Tên
            input#name.form-control(type="text" name='name')
        .from-group
            label(for="email") Email
            input#email.form-control(type="text" name='email')
        .form-group
            label(for="password") Password
            input#password.form-control(type="password" name='password')
        .form-group
            label(for="avatar") Avatar    
            input#avatar.form-control-file(type="file" name='avatar')
        button.btn.btn-success Đăng ký